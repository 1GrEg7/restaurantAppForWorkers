            android:text="Name2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:backgroundTint="@color/dark_yellow"
            android:textColor="@color/black"
            android:id="@+id/button6"
